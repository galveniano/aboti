---
import CardCompany from "../components/CardCompany.astro";
import Highlights from "../components/Highlights.astro";
import HomeInfo from "../components/HomeInfo.astro";
---

<div
  class="flex flex-1-0-0 flex-col justify-center items-center gap-[64px] ml-6"
>
  <div class="flex justify-center items-center self-stretch">
    <h1
      class="text-brand2 flex flex-nowrap gap-[10%] text-[40px] font-code capitalize font-normal leading-10 animate-slide-in-top"
    >
      AbotI <span class="hidden md:flex">Solutions</span>
    </h1>
  </div>

  <div
    class="flex content-center self-strech justify-center items-center gap-x-[128px] gap-y-[64px]"
  >
    <div
      class="flex flex-col xl:flex-row justify-center items-center gap-[30px] xl:gap-[5%]"
    >
      <CardCompany />
      <HomeInfo />
      <Highlights />
    </div>
  </div>
</div>
